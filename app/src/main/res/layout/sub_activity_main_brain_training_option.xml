<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".fragments.BrainTrainingOptionFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/background_neutral">

    <LinearLayout android:layout_width="0dp" android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:layout_weight="4">

        <ListView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:id="@+id/optionListView1">
        </ListView>

        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                      android:layout_weight="3"
                      android:orientation="horizontal">

            <Space android:layout_width="0dp" android:layout_height="match_parent"
                   android:layout_weight="1"/>

            <Button android:layout_width="0dp" android:layout_height="100dp"
                    android:id="@+id/optionMinusButton"
                    android:text="-"
                    android:textSize="60sp"
                    android:layout_gravity="center"
                    android:layout_weight="3"/>

            <TextView android:layout_width="0dp" android:layout_height="100dp"
                      android:id="@+id/difficultyTextView"
                      android:text="1"
                      android:textSize="60sp"
                      android:textAlignment="center"
                      android:layout_gravity="center"
                      android:layout_weight="2"/>

            <Button android:layout_width="0dp" android:layout_height="100dp"
                    android:id="@+id/optionPlusButton"
                    android:text="+"
                    android:textSize="60sp"
                    android:layout_gravity="center"
                    android:layout_weight="3"/>

            <Space android:layout_width="0dp" android:layout_height="match_parent"
                   android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout android:layout_width="0dp" android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:layout_weight="6">

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:id="@+id/previewLayout01">

                <ImageView android:layout_width="0dp" android:layout_height="0dp"
                           android:id="@+id/previewImageView01"/>

                <ImageView android:layout_width="0dp" android:layout_height="0dp"
                           android:id="@+id/previewImageView02"/>

            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:id="@+id/previewLayout02">

                <ImageView android:layout_width="0dp" android:layout_height="0dp"
                           android:id="@+id/previewImageView03"/>

                <ImageView android:layout_width="0dp" android:layout_height="0dp"
                           android:id="@+id/previewImageView04"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">

            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="ゲーム開始"
                    android:textSize="50sp"
                    android:layout_gravity="center"
                    android:id="@+id/brainTrainingOptionButton01"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>