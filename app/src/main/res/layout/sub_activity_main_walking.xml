<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.WalkingFragment"
        android:orientation="vertical"
        android:paddingLeft="0dp"
        android:paddingRight="0dp">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今日の目標歩数を設定する"
                android:id="@+id/walkingSelectButton01"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="目標歩数 --- "
                  android:id="@+id/goalStepsTextView"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今日の歩数を入力する"
                android:id="@+id/walkingSelectButton02"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="達成歩数 --- "
                  android:id="@+id/myStepsTextView"/>

    </LinearLayout>

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/stepCounterTextView"
              android:textSize="30sp"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:id="@+id/walkingInputButton01"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:id="@+id/walkingInputButton02"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:id="@+id/walkingInputButton03"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:id="@+id/walkingInputButton04"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:id="@+id/walkingInputButton05"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:id="@+id/walkingInputButton06"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:id="@+id/walkingInputButton07"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:id="@+id/walkingInputButton08"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:id="@+id/walkingInputButton09"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="訂正"
                android:id="@+id/walkingInputButtonClear"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/walkingInputButton00"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="決定"
                android:id="@+id/walkingInputButtonDecide"/>
    </LinearLayout>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            android:id="@+id/walkingSaveButton"/>


</LinearLayout>