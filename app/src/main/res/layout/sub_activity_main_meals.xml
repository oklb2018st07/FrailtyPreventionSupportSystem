<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.MealsFragment"
        android:orientation="vertical"
        android:paddingLeft="0dp"
        android:paddingRight="0dp">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:text=""
                  android:layout_weight="1"/>
        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:text="ほぼ毎日食べる"
                  android:layout_weight="1"/>
        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:text="2日に1回食べる"
                  android:layout_weight="1"/>
        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:text="週に1，2回食べる"
                  android:layout_weight="1"/>
        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:text="ほとんど食べない"
                  android:layout_weight="1"/>
    </LinearLayout>

    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal">
                <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                          android:text="肉"
                          android:layout_weight="1"/>
                <RadioGroup android:layout_width="0dp" android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="4"
                            android:id="@+id/radioGroup00">
                    <RadioButton android:layout_width="0dp" android:layout_height="wrap_content"
                                 android:id="@+id/radioButton03"
                                 android:layout_weight="1"/>
                    <RadioButton android:layout_width="0dp" android:layout_height="wrap_content"
                                 android:id="@+id/radioButton02"
                                 android:layout_weight="1"/>
                    <RadioButton android:layout_width="0dp" android:layout_height="wrap_content"
                                 android:id="@+id/radioButton01"
                                 android:layout_weight="1"/>
                    <RadioButton android:layout_width="0dp" android:layout_height="wrap_content"
                                 android:id="@+id/radioButton00"
                                 android:layout_weight="1"/>
                </RadioGroup>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal">
                <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                          android:text="魚介類"
                          android:layout_weight="1"/>
                <RadioGroup android:layout_width="0dp" android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="4"
                            android:id="@+id/radioGroup01">
                    <RadioButton android:layout_width="0dp" android:layout_height="wrap_content"
                                 android:id="@+id/radioButton13"
                                 android:layout_weight="1"/>
                    <RadioButton android:layout_width="0dp" android:layout_height="wrap_content"
                                 android:id="@+id/radioButton12"
                                 android:layout_weight="1"/>
                    <RadioButton android:layout_width="0dp" android:layout_height="wrap_content"
                                 android:id="@+id/radioButton11"
                                 android:layout_weight="1"/>
                    <RadioButton android:layout_width="0dp" android:layout_height="wrap_content"
                                 android:id="@+id/radioButton10"
                                 android:layout_weight="1"/>
                </RadioGroup>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal">
                <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                          android:text="卵"
                          android:layout_weight="1"/>
                <RadioGroup android:layout_width="0dp" android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="4"
                            android:id="@+id/radioGroup02">
                    <RadioButton android:layout_width="0dp" android:layout_height="wrap_content"
                                 android:id="@+id/radioButton23"
                                 android:layout_weight="1"/>
                    <RadioButton android:layout_width="0dp" android:layout_height="wrap_content"
                                 android:id="@+id/radioButton22"
                                 android:layout_weight="1"/>
                    <RadioButton android:layout_width="0dp" android:layout_height="wrap_content"
                                 android:id="@+id/radioButton21"
                                 android:layout_weight="1"/>
                    <RadioButton android:layout_width="0dp" android:layout_height="wrap_content"
                                 android:id="@+id/radioButton20"
                                 android:layout_weight="1"/>
                </RadioGroup>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal">
                <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                          android:text="大豆，大豆製品"
                          android:layout_weight="1"/>
                <RadioGroup android:layout_width="0dp" android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="4"
                            android:id="@+id/radioGroup03">
                    <RadioButton android:layout_width="0dp" android:layout_height="wrap_content"
                                 android:id="@+id/radioButton33"
                                 android:layout_weight="1"/>
                    <RadioButton android:layout_width="0dp" android:layout_height="wrap_content"
                                 android:id="@+id/radioButton32"
                                 android:layout_weight="1"/>
                    <RadioButton android:layout_width="0dp" android:layout_height="wrap_content"
                                 android:id="@+id/radioButton31"
                                 android:layout_weight="1"/>
                    <RadioButton android:layout_width="0dp" android:layout_height="wrap_content"
                                 android:id="@+id/radioButton30"
                                 android:layout_weight="1"/>
                </RadioGroup>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal">
                <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                          android:text="牛乳"
                          android:layout_weight="1"/>
                <RadioGroup android:layout_width="0dp" android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="4"
                            android:id="@+id/radioGroup04">
                    <RadioButton android:layout_width="0dp" android:layout_height="wrap_content"
                                 android:id="@+id/radioButton43"
                                 android:layout_weight="1"/>
                    <RadioButton android:layout_width="0dp" android:layout_height="wrap_content"
                                 android:id="@+id/radioButton42"
                                 android:layout_weight="1"/>
                    <RadioButton android:layout_width="0dp" android:layout_height="wrap_content"
                                 android:id="@+id/radioButton41"
                                 android:layout_weight="1"/>
                    <RadioButton android:layout_width="0dp" android:layout_height="wrap_content"
                                 android:id="@+id/radioButton40"
                                 android:layout_weight="1"/>
                </RadioGroup>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal">
                <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                          android:text="緑黄色野菜"
                          android:layout_weight="1"/>
                <RadioGroup android:layout_width="0dp" android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="4"
                            android:id="@+id/radioGroup05">
                    <RadioButton android:layout_width="0dp" android:layout_height="wrap_content"
                                 android:id="@+id/radioButton53"
                                 android:layout_weight="1"/>
