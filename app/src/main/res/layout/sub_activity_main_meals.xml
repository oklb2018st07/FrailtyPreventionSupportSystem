                          android:text="海藻類"
                          android:layout_weight="1"/>
                <RadioGroup android:layout_width="0dp" android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="4"
                            android:id="@+id/radioGroup06">
