<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.BrainTrainingFragment"
        android:orientation="horizontal"
        android:paddingLeft="0dp"
        android:paddingRight="0dp">

    <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:paddingLeft="10dp"
                  android:background="@color/background_neutral">

        <LinearLayout android:layout_width="0dp" android:layout_height="0dp"
                      android:orientation="horizontal"
                      android:id="@+id/rowLayout01">

            <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:layout_width="0dp" android:layout_height="0dp"
                           android:id="@+id/ImageView01"/>

                <ImageView android:layout_width="0dp" android:layout_height="0dp"
                           android:id="@+id/coverImageView01"/>

                <ImageView android:layout_width="0dp" android:layout_height="0dp"
                           android:id="@+id/maskImageView01"/>
            </FrameLayout>

            <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:layout_width="0dp" android:layout_height="0dp"
                           android:id="@+id/ImageView02"/>

                <ImageView android:layout_width="0dp" android:layout_height="0dp"
                           android:id="@+id/coverImageView02"/>

                <ImageView android:layout_width="0dp" android:layout_height="0dp"
                           android:id="@+id/maskImageView02"/>
            </FrameLayout>

            <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:layout_width="0dp" android:layout_height="0dp"
                           android:id="@+id/ImageView03"/>

                <ImageView android:layout_width="0dp" android:layout_height="0dp"
                           android:id="@+id/coverImageView03"/>

                <ImageView android:layout_width="0dp" android:layout_height="0dp"
                           android:id="@+id/maskImageView03"/>
            </FrameLayout>

            <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:layout_width="0dp" android:layout_height="0dp"
                           android:id="@+id/ImageView04"/>

                <ImageView android:layout_width="0dp" android:layout_height="0dp"
                           android:id="@+id/coverImageView04"/>

                <ImageView android:layout_width="0dp" android:layout_height="0dp"
                           android:id="@+id/maskImageView04"/>
            </FrameLayout>

        </LinearLayout>

        <LinearLayout android:layout_width="0dp" android:layout_height="0dp"
                      android:orientation="horizontal"
                      android:id="@+id/rowLayout02">

            <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:layout_width="0dp" android:layout_height="0dp"
                           android:id="@+id/ImageView05"/>

                <ImageView android:layout_width="0dp" android:layout_height="0dp"
                           android:id="@+id/coverImageView05"/>

                <ImageView android:layout_width="0dp" android:layout_height="0dp"
                           android:id="@+id/maskImageView05"/>
            </FrameLayout>

            <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:layout_width="0dp" android:layout_height="0dp"
                           android:id="@+id/ImageView06"/>

                <ImageView android:layout_width="0dp" android:layout_height="0dp"
                           android:id="@+id/coverImageView06"/>

                <ImageView android:layout_width="0dp" android:layout_height="0dp"
                           android:id="@+id/maskImageView06"/>
            </FrameLayout>

            <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:layout_width="0dp" android:layout_height="0dp"
                           android:id="@+id/ImageView07"/>

                <ImageView android:layout_width="0dp" android:layout_height="0dp"
                           android:id="@+id/coverImageView07"/>

                <ImageView android:layout_width="0dp" android:layout_height="0dp"
                           android:id="@+id/maskImageView07"/>
            </FrameLayout>

            <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:layout_width="0dp" android:layout_height="0dp"
                           android:id="@+id/ImageView08"/>

                <ImageView android:layout_width="0dp" android:layout_height="0dp"
                           android:id="@+id/coverImageView08"/>

                <ImageView android:layout_width="0dp" android:layout_height="0dp"
                           android:id="@+id/maskImageView08"/>
            </FrameLayout>

        </LinearLayout>

        <LinearLayout android:layout_width="0dp" android:layout_height="0dp"
                      android:orientation="horizontal"
                      android:id="@+id/rowLayout03">

            <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:layout_width="0dp" android:layout_height="0dp"
                           android:id="@+id/ImageView09"/>

                <ImageView android:layout_width="0dp" android:layout_height="0dp"
                           android:id="@+id/coverImageView09"/>

                <ImageView android:layout_width="0dp" android:layout_height="0dp"
                           android:id="@+id/maskImageView09"/>
            </FrameLayout>

            <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:layout_width="0dp" android:layout_height="0dp"
                           android:id="@+id/ImageView10"/>

                <ImageView android:layout_width="0dp" android:layout_height="0dp"
                           android:id="@+id/coverImageView10"/>

                <ImageView android:layout_width="0dp" android:layout_height="0dp"
                           android:id="@+id/maskImageView10"/>
            </FrameLayout>

            <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:layout_width="0dp" android:layout_height="0dp"
                           android:id="@+id/ImageView11"/>

                <ImageView android:layout_width="0dp" android:layout_height="0dp"
                           android:id="@+id/coverImageView11"/>

                <ImageView android:layout_width="0dp" android:layout_height="0dp"
                           android:id="@+id/maskImageView11"/>
            </FrameLayout>

            <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:layout_width="0dp" android:layout_height="0dp"
                           android:id="@+id/ImageView12"/>

                <ImageView android:layout_width="0dp" android:layout_height="0dp"
                           android:id="@+id/coverImageView12"/>

                <ImageView android:layout_width="0dp" android:layout_height="0dp"
                           android:id="@+id/maskImageView12"/>
            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:paddingLeft="10dp"
                  android:background="@color/background_neutral">
        <Button android:layout_width="match_parent" android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/gameReturnButton"
                android:textSize="40sp"/>

        <TextView android:layout_width="match_parent" android:layout_height="0dp"
                  android:layout_weight="1"
                  android:id="@+id/scoreTextView"
                  android:textSize="40sp"
                  android:gravity="center"/>

        <Button android:layout_width="match_parent" android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/gameGotoResultButton"
                android:textSize="40sp"/>

    </LinearLayout>

</LinearLayout>